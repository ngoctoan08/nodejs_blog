
<form class="mt-4 container-form" method="POST" action="/course/handle-action" >
  <div class="checkall-action d-flex align-items-center text-align-center">
    <input type="checkbox" id="check-all">
    <label for="check-all">Check all</label>
    <select required class="form-select form-select-sm select-all-option" aria-label="Default select example" name="action">
      <option value=""> -- Action -- </option>
      <option value="delete">Delete</option>
    </select>
    <button type="submit" class="btn btn-primary disable btn-submit-action">Submit</button>

  </div>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col"> </th>
        <th scope="col">#</th>
        <th scope="col">Name
          {{{sortable 'name' _sort}}}
        </th>
        <th scope="col">Price
          {{{sortable 'price' _sort}}}
        </th>
        <th scope="col">Description
          {{{sortable 'description' _sort}}}
        </th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses }}
      <tr>
        <th><input type="checkbox" name="courseId[]" value="{{this._id}}"></th>
        <th scope="row"> {{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.price}}</td>
        <td>{{this.description}}</td>
        <td>
          <a href="/course/{{this._id}}/edit" class="btn btn-primary" >Edit</a>
          <a href="" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id = "{{this._id}}">Delete</a>
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="5" class="text-center"> You haven't post course!
          <a href="/course/create">Post course</a>
        </td>
      </tr>
      {{/each}}
      
    
    </tbody>
  </table>
</form>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Do you want to delete this course?</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      {{!-- <div class="modal-body">
        ...
      </div> --}}
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary btn-confirm-delete">Ok</button>
      </div>
    </div>
  </div>
</div>
<form method="POST" name="form-course-delete" ></form>
