
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each courses }}
     <tr>
      <th scope="row"> {{sum @index 1}}</th>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td>
        <a href="/course/{{this._id}}/edit" class="btn btn-primary">Edit</a>
        <a href="/course/{{this._id}}/delete" class="btn btn-danger">Delete</a>
      </td>
    </tr>
    {{else}}
    <tr>
      <td colspan="5" class="text-center"> No data!
        <a href="/course/">List course</a>
      </td>
    </tr>
    {{/each}}
    
   
  </tbody>
</table>