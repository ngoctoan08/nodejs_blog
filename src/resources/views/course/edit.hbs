<div class="mt-4 d-flex justify-content-center flex-column">
    <h3>EDIT COURSES</h3>
    <br>
    <div style="width: 1000px;" class="form">
        <form method="POST" action="/course/{{course._id}}?_method=PUT">
            <div class="mb-3 form-group">
                <label for="name" class="form-label">Name's Course</label>
                <input type="text" class="form-control" name="name" id="name" value ="{{course.name}}" >
            </div>
            <div class="mb-3 form-group">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" name="price" id="price" value ="{{course.price}}">
            </div>
            <div class="mb-3 form-group">
                <label class="form-label" for="description">Description</label>
                <br>
                {{!-- <input type="text"> --}}
                <textarea name="description" id="description" cols="100" rows="10"> {{course.description}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
    
</div>
